{
  "name": "launch-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate:content": "node scripts/generate-product-stubs.mjs",
    "generate:csv": "node scripts/generate-from-csv.mjs products.csv companies.csv",
    "check:content": "node -e \"const fs=require('fs');const matter=require('gray-matter');['products','companies'].forEach(d=>fs.readdirSync('content/'+d).forEach(f=>JSON.parse(JSON.stringify(matter(fs.readFileSync('content/'+d+'/'+f,'utf8')).data))))\"",
    "check:tables": "grep -rn '<table\\|<tr\\|<td\\|<hr>' app || echo 'No tables found'",
    "check:theme": "node -e \"const fs=require('fs');const css=fs.readFileSync('app/globals.css','utf8');['--background','--foreground','--muted','--muted-foreground','--border','--h1-size','--h2-size','--body-size'].forEach(t=>{if(!css.includes(t)){console.error('Missing token:',t);process.exitCode=1}})\"",
    "check:layout": "grep -rn '<table\\|<tr\\|<td\\|<hr>' app || true",
    "test:visual": "playwright test",
    "fix:colors": "node scripts/fix-colors.mjs",
    "audit:colors": "node scripts/audit-colors.mjs",
    "audit:summary": "node scripts/color-summary.mjs",
    "prepush": "npm run lint && npm run check:theme && npm run check:layout && npm run check:content && npm run audit:colors && node -e \"const fs=require('fs');const p='color-audit/report.json';if(fs.existsSync(p)){const n=JSON.parse(fs.readFileSync(p,'utf8')).length;if(n>0){console.error('‚ùå Color audit failed: ',n,'offender(s).');process.exit(1)}}\""
  },
  "dependencies": {
    "@next/mdx": "^15.5.5",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.441.0",
    "next": "^15.4.3",
    "next-themes": "^0.4.4",
    "papaparse": "^5.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^2.5.3",
    "tw-animate-css": "^1.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.0.12",
    "@types/node": "^20",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.12",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1"
  }
}
